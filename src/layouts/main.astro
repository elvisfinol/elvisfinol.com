---
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import SquareLines from "../components/square-lines.astro";
const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <title>{title}</title> -->

    <style>
      .prose img {
        border-radius: 20px;
      }

      @import url('https://fonts.cdnfonts.com/css/wotfard');

      html {
        font-family: 'Wotfard', sans-serif;
        scroll-behavior: smooth;
        font-weight: 400;
      }

  
    </style>

    <link href="https://fonts.cdnfonts.com/css/wotfard" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="/public/assets/images/favicon.ico"/>
    <Fragment set:html={import.meta.env.HEADER_INJECT} />
  </head>

  <body class="antialiased bg-gradient-to-tr from-slate-100 to-gray-200 flex items-center justify-center min-h-screen py-10 px-5">

    <div class="max-w-5xl w-full mx-auto text-base leading-relaxed tracking-tighter">
      <Header />
      <slot />
    </div>
    <script src="../assets/js/main.js"></script>
    <Fragment set:html={import.meta.env.FOOTER_INJECT} />
    
  </body>


</html>
